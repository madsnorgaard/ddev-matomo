# DDEV Matomo Configuration
# 
# This file allows you to customize your Matomo installation.
# Copy this file to your project's .ddev/ directory and modify as needed.
#
# After making changes, run: ddev restart

# Matomo Version Configuration
# Choose between Matomo 4.x (LTS) or 5.x (latest)
# Examples: "5", "4", "5.1.2", "4.15.1"
MATOMO_VERSION: "5"

# Database Configuration
# IMPORTANT: Use a separate database name to avoid conflicts with your application
# Default: "matomo"
MATOMO_DATABASE_DBNAME: "matomo"

# PHP Configuration (optional)
# Adjust these based on your Matomo needs
MATOMO_PHP_MEMORY_LIMIT: "256M"
MATOMO_PHP_MAX_EXECUTION_TIME: "300"
MATOMO_PHP_POST_MAX_SIZE: "16M"
MATOMO_PHP_UPLOAD_MAX_FILESIZE: "16M"

# Matomo Security Settings (optional)
# Enable trusted host check (0 or 1)
MATOMO_GENERAL_ENABLE_TRUSTED_HOST_CHECK: "0"

# Force HTTPS (recommended for production)
# Set to 1 if using HTTPS
MATOMO_GENERAL_ASSUME_SECURE_PROTOCOL: "1"

# Matomo Performance Settings (optional)
# Enable browser archiving (0 or 1)
# Set to 0 for better performance with cron-based archiving
MATOMO_GENERAL_ENABLE_BROWSER_ARCHIVING_TRIGGERING: "1"

# Additional Matomo Environment Variables
# You can add any Matomo configuration here using the format:
# MATOMO_[SECTION]_[KEY]: "value"
# 
# Examples:
# MATOMO_GENERAL_FORCE_SSL: "1"
# MATOMO_GENERAL_PROXY_CLIENT_HEADERS: "HTTP_X_FORWARDED_FOR"
# MATOMO_DATABASE_CHARSET: "utf8mb4"